<!DOCTYPE HTML>
<html lang="en">

<Head>
    <link rel="stylesheet" href="/css/main.css" />
    <title>Projects</title>
</head>

<body>
  <!--Loads Navbar-->
  <%- include('partials/navbar', { page: "/solutions/projects" }) %>

 <div class="container mx-auto p-4">
   <!--Basic Title Container-->
  <div class="hero bg-base-200 text-center py-6 mb-8">
    <div class="hero-content flex-col">
     <div>
      <h1 class="text-5xl font-bold">Projects</h1>
    </div>
    <div class = flex-row>
    <a href="/solutions/projects?sector=Industry" class="btn btn-primary">Industry</a>
     <a href="/solutions/projects?sector=Transportation" class="btn btn-primary">Transportation</a>
      <a href="/solutions/projects?sector=Electricity" class="btn btn-primary">Electricity</a>
       <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-primary">Arigculture</a>
        <a href="/solutions/projects?sector=Land Sinks" class="btn btn-primary">Land Sinks</a>
    </div>
  </div>
 </div>

 <div class="overflow-x-auto">
   <table class="table">
     <thead>
       <tr>
         <th>Title</th>
         <th>Sector</th>
         <th>Summary</th>
         <th>Details</th>
       </tr>
     </thead>
     <tbody>
       <% projects.forEach(function(project) { %>
       <tr>
         <td><%= project.title %></td>
         <td>
           <a href="/solutions/projects?sector=<%= encodeURIComponent(project.sector) %>" class="inline flex btn btn-primary bg-base-200">
             <%= project.sector %>
           </a>
         </td>
         <td><%= project.summary_short %></td>
         <td>
           <a href="/solutions/projects/<%= project.id %>" class="btn btn-primary bg-base-200">Details</a>
         </td>
       </tr>
       <% }); %>
     </tbody>
   </table>
 </div>
</div>
</body> 